{
    "manifest_version": 3,
    "name": "ResumeAI Pro â€” LinkedIn Scanner",
    "version": "1.0.0",
    "description": "Instantly analyze your resume against LinkedIn job postings with AI-powered scoring.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://www.linkedin.com/*",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "ResumeAI Pro",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.linkedin.com/jobs/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}